# FENTPIC Environment Configuration
# Copy this file to .env and update with your values

# Required: Application Secret Key
# Generate a secure random key for production
SECRET_KEY=your-very-secure-random-secret-key-here

# Optional: Google OAuth Configuration
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Optional: Cloudflare Configuration
# For additional security and DDoS protection
CLOUDFLARE_SECRET=your-cloudflare-secret
CLOUDFLARE_SITE_KEY=your-cloudflare-site-key

# Optional: Database Configuration
# Default uses SQLite, can be configured for PostgreSQL/MySQL
DATABASE_URL=sqlite:///database.db

# Optional: File Upload Configuration
MAX_FILE_SIZE=20971520  # 20MB in bytes
UPLOAD_FOLDER=static/uploads

# Optional: Session Configuration
SESSION_TIMEOUT=2678400  # 31 days in seconds

# Development Settings
FLASK_ENV=development
FLASK_DEBUG=1